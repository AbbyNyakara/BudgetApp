<div class="container-fluid w-75 d-flex flex-column align-items-center mt-5">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "w-100 w-md-75 mt-4"}) do |f| %>
  <div class="field mt-3 w-50">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field mt-3 w-50">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password(6 Characters Minimum)" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3 w-50">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn login-btn my-2 w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
